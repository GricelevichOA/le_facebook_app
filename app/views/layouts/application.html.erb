<!DOCTYPE html>
<html>
  <head>
    <title>LeFacebookApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-light bg-light">
      <a class="navbar-brand" href="/">Totally not facebook clone</a>
      <% if current_user %>
        <%= link_to 'All Users', users_index_path %>
        <%= link_to "Friend Requests (#{current_user.received_requests.where(accepted: 0).count})", requests_path %>
        <%= link_to 'My Profile', current_user.profile %>
        <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
      <% else %>
        <%= link_to "Sign up", new_user_registration_path %>
        |
        <%= link_to "Sign in", new_user_session_path %>
      <% end %>
    </nav>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
